<Window x:Class="Copypasta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Copypasta"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" 
        Closing="Window_Closing"
        ShowInTaskbar="False" 
        SourceInitialized="Window_SourceInitialized"
        >
    <Border BorderBrush="#99004f" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="5" Background="#4d0028">
        <StackPanel Width="100">
            <Label x:Name="Operation" Content="Operation..." Height="28" Foreground="White" Background="Transparent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" BorderBrush="#99004f" BorderThickness="0,0,0,2"/>
            <TextBox x:Name="KeyPressTextBox" Height="26" Text="Press a key" Foreground="White" Background="Transparent" CaretBrush="White" BorderThickness="0" VerticalContentAlignment="Center" TextAlignment="Center" GotFocus="KeyPressTextBox_GotFocus"/>
        </StackPanel>
    </Border>
</Window>
